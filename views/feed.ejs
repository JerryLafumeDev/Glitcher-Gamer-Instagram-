      </div>
      <div class="feedLine">
        <label for="" class="secLabels feedd glass">Feed</label>
        <% if(posts) { %>
            <% for(let i = 0 ; i<posts.length;i++) { %>            
            
              <div class="wholePost glass">
              <div class="wrapper bR">
              <div class="neon-wrapper bR">
              <header class="postHeader">
                <a href='/user/<%= posts[i].authorID %>' class="postproName"><h2 class="dfdf"><%= posts[i].authorName %></h2></a>
                  <a href='/post/<%= posts[i]._id%>' class="threedots"><i class="fas fa-ellipsis-h"></i></a>
              </header>
            <div class="postBorder">

            <div class="post">
              <div class="blackdrop">
              
              <a href='/post/<%= posts[i]._id%>'>
                <img src="<%= posts[i].path %>" class="postImg" alt="<%= posts[i].title %>">
              </a>
            
            </div>
            <div class="postFooter">
              <div class="Comments"><p class="caption"><span id="captionID"><%= posts[i].authorName %>:</span> <%= posts[i].body %></p></div>
              <div class="postButtons">
            <svg class="icon">
              <use xlink:href="#heartbeat" />
              <p class="littleWords">Likes</p>
              <%= posts[i].likes %>
              </svg>
            <svg class="icon">
              <a href='/post/<%= posts[i]._id%>'><use xlink:href="#chat" /></a>
              <p class="littleWords"><a href='/post/<%= posts[i]._id%>' class="linklittlewords">Comments</a></p>
              <%= posts[i].likes %>
              </svg>
            <svg class="icon share">
              <a href='/post/<%= posts[i]._id%>'><use xlink:href="#share" /></a>
              <p class="littleWords"><a href='/post/<%= posts[i]._id%>' class="linklittlewords shares">Share</a></p>
              </svg>
            </div>
              <div class="commentSec">
                <textarea name="" id="" cols="30" rows="10"></textarea><button class="send"><i class="fas fa-arrow-circle-right"></i></button>
              </div>
            </div>
            <span class="gradient bR"></span>
            <span class="dodge bR"></span>
          </div>
            </div>
            </div>
          </div>
              </div>
            <% } %>

        <% } %>
      
      </div>

      <div class="suggestSec">
        <label for="" class="secLabels gamerss glass">Other Gamers</label>
        <div class="who2follow glass">
        </div>
        <label for="" class="secLabels streamss glass">Popular Streams</label>
        <div class="streamSec glass">
          <div id="twitch-embed"></div>
          <div id="twitch-embed2"></div>
        </div>
      </div>
